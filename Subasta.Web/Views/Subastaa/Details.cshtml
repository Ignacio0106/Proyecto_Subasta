@model Subasta.Aplication.DTOs.SubastaDTO

@{
    ViewData["Title"] = "Detalle de Subasta";
}

<h1 class="mb-4">Detalle de Subasta #@Model.IdSubasta</h1>

<div class="row">
    <!-- Información del objeto -->
    <div class="col-md-5">
        <div class="card mb-3">
            <div class="card-header">
                Información del Objeto
            </div>
            <div class="card-body text-center">
                <h5 class="card-title">@Model.Objeto</h5>

                @if (Model.Imagen != null && Model.Imagen.Length > 0)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Imagen)"
                         alt="@Model.Objeto" class="img-fluid rounded mb-2" />
                }
                else
                {
                    <div class="text-muted mb-2">Sin imagen disponible</div>
                }

                <p>
                    <strong>Categorías:</strong>
                    @if (Model.Categorias != null && Model.Categorias.Any())
                    {
                        @string.Join(", ", Model.Categorias)
                    }
                    else
                    {
                        <span class="text-muted">Sin categorías</span>
                    }
                </p>
                <p><strong>Condición:</strong> @Model.Condicion</p>
            </div>
        </div>
    </div>

    <!-- Información de la subasta -->
    <div class="col-md-7">
        <div class="card mb-3">
            <div class="card-header">
                Datos de la Subasta
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-5">Fecha de inicio</dt>
                    <dd class="col-sm-7">@Model.FechaHoraInicio.ToString("g")</dd>

                    <dt class="col-sm-5">Fecha de cierre</dt>
                    <dd class="col-sm-7">@Model.FechaHoraCierre.ToString("g")</dd>

                    <dt class="col-sm-5">Precio base</dt>
                    <dd class="col-sm-7">@Model.PrecioBase.ToString("C")</dd>

                    <dt class="col-sm-5">Incremento mínimo</dt>
                    <dd class="col-sm-7">@Model.IncrementoMinimo.ToString("C")</dd>

                    <dt class="col-sm-5">Estado actual</dt>
                    <dd class="col-sm-7">@Model.EstadoSubasta</dd>

                    <dt class="col-sm-5">Cantidad total de pujas</dt>
                    <dd class="col-sm-7">@Model.CantidadPujas</dd>

                    <dt class="col-sm-5">Usuario creador</dt>
                    <dd class="col-sm-7">@Model.UsuarioCreador</dd>
                </dl>

                <a asp-controller="Puja" asp-action="HistorialPujas" asp-route-id="@Model.IdSubasta" class="btn btn-primary mt-3">
                    <i class="bi bi-clock-history me-1"></i> Ver historial de pujas
                </a>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Activas" class="btn btn-secondary">Volver a Subastas Activas</a>
</div>